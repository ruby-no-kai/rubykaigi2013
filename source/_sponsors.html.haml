%ul
  - sponsors.each do |sponsor|
    %li{id: sponsor.id}
      - if sponsor.special
        %h2.platinumSponsorType
          = sponsor.special
      %p.logo
        = sponsor_logo_tag sponsor
      %p.name
        = link_to sponsor.name, sponsor.link, target: '_blank'
      %p
        = sponsor.description || 'Coming soon...'

  - if defined?(sponsors_wanted) && sponsors_wanted
    %li
      %p.logo= image_tag(sponsors_wanted, alt: 'SPONSORS WANTED!!', width: sponsor_weight_to_size(sponsors.first.weight))
      %p.name= 'Get this spot'
      %p
        Prospectus:
        %a(href='https://dl.dropbox.com/s/3yhh9578lz72yw6/rk13-sponsors-prospectus.pdf' target='_blank')
          http://goo.gl/UrKpm
      %p
        Application Form:
        %a(href='https://docs.google.com/a/ruby-no-kai.org/spreadsheet/viewform?formkey=dGxvUkQxQm04MmVicDFEaHppb0diS3c6MQ#gid=0' target='_blank')
          http://goo.gl/u4xc3
